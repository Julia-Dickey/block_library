
<div class="jumbotron jumbotron-fluid d-flex align-items-center profile-show mb-0" style="height: 20rem;     margin-top:-50px">
</div>

<%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i> <span>&nbsp; &nbsp;Edit </span>'.html_safe, edit_profile_path(@profile), :class => "btn rounded-left btn-info edit-float floating-button text-white", :style => "z-index: 1; border-radius: 5px 0 0 5px", id: "edit-member", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#edit-member-modal' %>

<%= link_to '<i class="fa fa-times" aria-hidden="true"></i>
 <span>&nbsp; &nbsp;Delete </span>'.html_safe, profile_path(@profile), :class => "btn rounded-left btn-danger delete-float floating-button text-white", :style => "z-index: 1; border-radius: 5px 0 0 5px", id: "delete-member", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#delete-member-modal' %>

<div class="container flex-row">
  <div class="row">
    <div class="col-sm-4 background-grey summary-text shadow-inner rounded pb-4 px-0">
      <span>
        <% if @profile.status === "Survive" %>
        <img class="card-profile-img rounded-circle shadow-nav ml-3 mr-4 mb-2" src="../images/starve_ups_stage-01.png" style="width: 75px; margin-top: -3rem">
        <% elsif @profile.status === "Strive" %>
        <img class="card-profile-img rounded-circle shadow-nav ml-3 mr-4 mb-2" src="../images/starve_ups_stage-02.png" style="width: 75px; margin-top: -3rem">
        <% elsif @profile.status == "Thrive" %>
        <img class="card-profile-img rounded-circle shadow-nav ml-3 mr-4 mb-2" src="../images/starve_ups_stage-03.png" style="width: 75px; margin-top: -3rem">
        <% end %>
      </span>
      <img src="../images/founders.jpeg" class="px-3" style="margin-top: -4" alt="">
      <img src="../images/logo_placeholder.png" alt="<%= @profile.company %>'s logo'" class="px-3 my-3" style="max-width: 200px">
      <h3 class="pt-2 pb-2 px-3 text-blue"><%= @profile.company %></h3>
      <p class="label mb-0 px-3 " style=""><strong><i class="fa fa-map-marker" aria-hidden="true"></i>
      &nbsp;CHAPTER:</strong></p>
      <p class="mb-3 px-3 summary-text" style="font-size: 1em">
        <%= @profile.chapter %></p>
      <p class="label mb-0 px-3 " style=""><strong><i class="fa fa-area-chart" aria-hidden="true"></i> &nbsp;INDUSTRY:</strong></p>
      <p class="mb-3 px-3 summary-text" style="font-size: 1em">
      <%= @profile.industry %></p>
      <p class="label mb-0 px-3" style=""><i class="fa fa-flag" aria-hidden="true"></i>&nbsp;<strong>MEMBER STATUS</strong></p>
      <p class="mb-3 px-3 summary-text"><%= @profile.status %></p>
      <p class="label mb-0 px-3" style=""><i class="fa fa-birthday-cake" aria-hidden="true"></i>&nbsp; <strong>FOUNDED:</strong></p>
      <p class="mb-3 px-3 summary-text"><%= @profile.founded %></p>
      <p class="label mb-0 px-3" style=""><i class="fa fa-users" aria-hidden="true"></i>&nbsp; <strong>MEMBER SINCE:</strong></p>
      <p class="mb-3 px-3 summary-text"> <%= @profile.membersince %></p>
      <p class="label mb-0 px-3 " style=""><i class="fa fa-money" aria-hidden="true"></i>&nbsp;<strong>FUNDING SOURCES:</strong></p>
      <p class="mb-3 px-3 summary-text"><%= @profile.funding %></p>
      <p class="label mb-0 px-3" style=""><i class="fa fa-rocket" aria-hidden="true"></i>&nbsp;<strong>BUSINESS STRATEGY:</strong></p>
      <p class="mb-3 px-3 summary-text"><%= @profile.strategy %></p>
      <p class="label mb-0 px-3" style=""><strong><i class="fa fa-eject" aria-hidden="true"></i>&nbsp;EXIT STRATEGY:</strong></p>
      <p class="body summary-text px-3">
        <%= @profile.exit %></p>
      <p class="label mb-0 px-3" style=""><strong><i class="fa fa-laptop" aria-hidden="true"></i>&nbsp;WEBSITE:</strong></p>
      <p class="px-3"><%= link_to @profile.website, :target => "_blank"%></p>
      <p class="mb-0 mt-3 label mb-0 px-3" style=""><strong><i class="fa fa-laptop" aria-hidden="true"></i>&nbsp;VIDEO:</strong></p>
      <a href="#" class="px-3">Check out our video</a>
      <div class="color-block blue-shadow mt-4 px-3 py-3">
        <h5 class="subhead pb-0"><%= @profile.company %></h5>
          <a href="#"><%= @profile.website %></a> <br/>
          <a href="#">info@profile.com</a>
          <h5 class="subhead pt-4 pb-0">Founded by:</h5>
          <p>
            Founder's Name<br/>
            1(503)321-5432<br/>
            <a href="#">email@founder.com</a>
          </p>
      </div>
    </div>

    <div class="col-sm-8 details px-4 mt-1 rounded shadow-left">
      <p class="quote my-4" style="font-size: 2rem; line-height: 1.25">"<%= @profile.overview %>"</p>
      <hr>
      <h5 class="subhead pt-4">About <%=@profile.company%></h5>
      <p class="body-copy mb-4" style="max-width: 800px"><%=@profile.body%></p>
      <div class="embed-responsive embed-responsive-16by9 my-4">
        <div class="embed-responsive-item">
          <iframe src="https://player.vimeo.com/video/119810871?title=0&byline=0&portrait=0" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
          <p><a href="https://vimeo.com/119810871">Starve Ups Overview Video</a> from <a href="https://vimeo.com/starveups">Starve Ups</a> on <a href="https://vimeo.com">Vimeo</a>.</p>

        </div>
      </div>
    </div>
  </div>
</div>

