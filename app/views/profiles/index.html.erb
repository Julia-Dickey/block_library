<div class="container-fluid">
  <%= link_to '+', new_profile_path, :class => "btn btn-success floating-button add-float" %>

  <div class="directory-container">
    <h3>Starve Ups Members</h3>
    <div class="col-sm-6 directory">
      <% if @profiles.any? %>
        <% @profiles.each do |profile| %>
          <div class="profile-list"><img src="../images/logo_placeholder.png" alt="" class="avatar">&nbsp;&nbsp;<%= link_to profile.company, profile_path(profile) %></div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>

<div class="container">

  <div class="card-group text-center">
    <% if @profiles.any? %>
      <div class="row">
        <% @profiles.each do |profile| %>
          <div class="col-sm-4">
            <div class="card card-profile">
              <img class="card-img-top" style="background-image: url(../images/profile_preview.png); height: 300px; width: auto" alt="">
              <div class="card-block text-xs-centered">
                <% if profile.status === "Survive" %>
                  <img class="card-profile-img rounded-circle" src="../images/starve_ups_stage-01.png" style="width: 100px; margin-top: -4rem">
                <% elsif profile.status === "Strive" %>
                  <img class="card-profile-img rounded-circle" src="../images/starve_ups_stage-02.png" style="width: 100px; margin-top: -4rem">
                <% elsif profile.status == "Thrive" %>
                  <img class="card-profile-img rounded-circle" src="../images/starve_ups_stage-03.png" style="width: 100px; margin-top: -4rem">
                <% end %>
                <h5 class="card-title"><%= link_to profile.company, profile_path(profile) %></h5>
                <p class="card-text"><%= profile.industry %></p>
                <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
              </div>
            </div>
          </div>
        <% end %>
      </div>

    <% end %>
  </div>
</div>

