<div class="sc_block container">

  <%= link_to "+ &nbsp; Event".html_safe, new_event_path, { class: "btn btn-success add-event-float text-white", style:"border-radius: 5px 0 0 5px", id: "new-event", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#new-event-modal'} %>
  <div class="container-fluid">
    <div class='calendar my-4' style="color: #636c72">
    </div>
    <hr class="hidden-sm-up">

      <div class="col-sm-8 event-list hidden-sm-up">
        <% @eventsList.each do |event| %>
        <div class="row d-flex flex-nowrap justify-content-start align-items-center">
          <div class="col-xs-1 px-0">
            <h1 class="event-date mx-4"><%= event.start.strftime("%d")  %></h1>
          </div>
          <div class="col pl-4" style="border-left: 1px solid lightgrey">
            <h5 class="text-muted event-desc mb-0 pb-0" style=""><%= link_to event.title, event_path(event)%></h5>
            <p class="mt-0 pt-0">
            <span class="card-text text-muted">5&mdash;6PM |
            <% if event.exclusive %>
            MEMBERS ONLY</span></p>
            <% else %>
              PUBLIC</span></p>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="modal fade" id="new-event-modal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">New event details</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body" id="new-event-form">
              <%= render "form" %>
            </div>
          </div>
        </div>
      </div>

  </div>
</div>
