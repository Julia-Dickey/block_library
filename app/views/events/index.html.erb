<div class="container-fluid">
  <div class='calendar'></div>

  <%= link_to "Add an event", new_event_path, { class: "btn btn-outline-success", id: "new-event", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#new-event-modal'} %>
  <!-- <%= link_to "Add an event", new_event_path, class: "btn btn-outline-success", id: "new-event" %> -->
</div>


  <div class="modal fade" id="new-event-modal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add an event</h5>
          <div class="modal-body" id="new-event-form">
            <%= render "form" %>
          </div>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-success">Save changes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>





