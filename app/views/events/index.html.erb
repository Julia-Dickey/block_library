<div class="container-fluid">

  <div class='calendar'>
    <%= link_to "Add an event", new_event_path, { class: "btn btn-outline-success", id: "new-event", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#new-event-modal'} %>

  </div>
  <!-- <%= link_to "Add an event", new_event_path, class: "btn btn-outline-success", id: "new-event" %> -->

  <div class="col-sm-8 event-list">
    <table>
      <thead>
        <tr>
          <th>Upcoming Events</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @eventsList.each do |event| %>
          <tr>
            <td><%= event.start %></td>
            <td>
              <hr>
            <strong><%= link_to event.title, event_path(event)%></strong><br/>
            <%= event.body %></td>
            <!-- <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- <div class="" id="remote_container">

  </div> -->
    <div class="modal fade" id="new-event-modal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">New event details</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="new-event-form">
            <%= render "form" %>
          </div>
        </div>
      </div>
    </div>

</div>
